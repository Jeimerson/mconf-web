#edit-webconference-recording

  .modal-header
    %h3= t('.title')

  = simple_form_for @recording, :html => { :class => "single-column" } do |f|
    .modal-body
      = hidden_field_tag :redir_url, @redir_url
      = f.input :description, :autofocus => true
    .modal-footer
      = f.button :wrapped, t("save"), :class => "btn btn-default", :cancel_modal => true
