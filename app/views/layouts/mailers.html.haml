!!! Strict
%html{:lang => I18n.locale.to_s}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
    = stylesheet_link_tag "mailers", :media => "screen, projection"
    = yield :headers
  %body
    .logo
      %a{:href => root_url}= image_tag "#{root_url}/assets/logos/mconf-color-transp.png", :size => '231x120'
    .message-body
      .message
        = yield
    .footer
      %p
        = t('.signature').html_safe
