= page_title t(".title", :name => @room.name).html_safe

= content_for :navbar_menu do
  = render "my/navbar_menu", user_spaces: @user_spaces

#choose-login
  %h3= t(".title")
  %h4= t(".subtitle")

  .social-btns
    - if current_site.social_login_enabled?("facebook")
      = link_to user_omniauth_authorize_path(:facebook), class: 'btn btn-large btn-facebook' do
        = icon_login_facebook
        %span= t('.facebook')
    - if current_site.social_login_enabled?("google")
      = link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-large btn-google' do
        = icon_login_google
        %span= t('.google')
    - if current_site.unauth_access_to_conferences?
      .btn.btn-large.btn-guest= t('.guest')

#guest-login{style: "display: none"}
  %h3= t(".title_guest")

  = simple_form_for @room, :url => invite_bigbluebutton_room_path(@room), :method => "get" do |f|
    .form-group
      %h4= t(".full_name")
      = text_field_tag "user[name]", "", required: true, class: 'form-control'
    .form-actions
      = f.button :submit, t(".next"), :class => "btn btn-primary btn-guest-next", disabled: true

= render partial: "invite_header", locals: { room: @room, page: 1 }

