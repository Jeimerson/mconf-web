.centralized

  %h1.title= t('devise.mailer.confirmation_instructions.welcome', email: @resource.first_name)

  %p
  - unless Site.current.require_registration_approval?
    .subtitle= t('devise.mailer.confirmation_instructions.confirmation_ok')
    %p
      - url = confirmation_url(@resource, confirmation_token: @token)
      = link_to url, url

  - else
    .subtitle= t('devise.mailer.confirmation_instructions.confirmation_pending')
    %p= t('devise.mailer.confirmation_instructions.confirmation_pending2')
