#post-reply

  .modal-header
    %h3
      = modal_close_button
      = t("reply_to")
      = @post.title

  #post-message
    = simple_form_for [@space, @new_post], html: { multipart: true, class: "single-column" } do |f|
      .modal-body
        = f.hidden_field :parent_id
        = f.input :text, label: false, autofocus: true
      .modal-footer
        = f.button :wrapped, t("button.post"), :class => "btn btn-primary", :cancel_modal => true
